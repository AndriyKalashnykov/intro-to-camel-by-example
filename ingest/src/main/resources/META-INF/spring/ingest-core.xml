<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
           http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
           
  <bean id="jmsTxConfig" class="org.apache.camel.component.jms.JmsConfiguration">
    <property name="connectionFactory" ref="jms.connectionFactory"/>
    <property name="transacted" value="true"/>
    <property name="cacheLevelName" value="CACHE_CONSUMER"/>
    <property name="acknowledgementModeName" value="SESSION_TRANSACTED"/>
  </bean>
  
  <bean id="activemq" class="org.apache.activemq.camel.component.ActiveMQComponent">
    <property name="configuration" ref="jmsTxConfig" />
  </bean>
  
  <camel:camelContext id="ingest-context">
    <camel:routeBuilder ref="fileIngestorRouteBuilder" />
  </camel:camelContext>
  
  <bean id="fileIngestorRouteBuilder" class="example.jug.camel.ingest.FileIngestorRouteBuilder">
    <property name="sourceDirPath" value="${example.jug.camel.ingest.source.dir}"/>
    <property name="failDirPath" value="${example.jug.camel.ingest.fail.dir}"/>
    <property name="doneDirPath" value="${example.jug.camel.ingest.done.dir}"/>
    <property name="recordsQueueName" value="${example.jug.camel.ingest.records.queue.name}"/>
  </bean>
</beans>
