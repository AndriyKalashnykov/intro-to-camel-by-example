<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
  
  <bean id="jdbc.dataSource" class="org.apache.commons.dbcp.BasicDataSource">
    <property name="driverClassName" value="${example.jug.camel.jdbc.driver.class}" />
    <property name="url" value="${example.jug.camel.jdbc.url}" />
    <property name="username" value="${example.jug.camel.jdbc.username}" />
    <property name="password" value="${example.jug.camel.jdbc.password}" />
    <property name="minIdle" value="${example.jug.camel.jdbc.pool.min}"/>
    <property name="maxIdle" value="${example.jug.camel.jdbc.pool.max}" />
    <property name="maxActive" value="${example.jug.camel.jdbc.pool.max}" />
    <property name="minEvictableIdleTimeMillis" value="30000"/>
    <property name="timeBetweenEvictionRunsMillis" value="15000"/>
    <property name="numTestsPerEvictionRun" value="10"/>
    <property name="validationQuery" value="${example.jug.camel.jdbc.validation.query}" />
    <property name="testOnBorrow" value="${example.jug.camel.jdbc.validation.active}" />
    <property name="poolPreparedStatements" value="true" />
  </bean>
  
  <bean id="jdbc.transactionManager"
        class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
    <property name="dataSource" ref="jdbc.dataSource"/>
  </bean>
  
  <bean id="JDBC_PROPAGATION_REQUIRED" class="org.apache.camel.spring.spi.SpringTransactionPolicy">
    <property name="transactionManager" ref="jdbc.transactionManager"/>
    <property name="propagationBehaviorName" value="PROPAGATION_REQUIRED"/>
  </bean>
  
  <bean id="JDBC_PROPAGATION_REQUIRES_NEW" class="org.apache.camel.spring.spi.SpringTransactionPolicy">
    <property name="transactionManager" ref="jdbc.transactionManager"/>
    <property name="propagationBehaviorName" value="PROPAGATION_REQUIRES_NEW"/>
  </bean>
</beans>
